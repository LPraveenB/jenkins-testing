pipeline {
    agent any
    options {
        buildDiscarder logRotator(
            daysToKeepStr: '16',
            numToKeepStr: '10'
        )
    }
    stages {
        stage('Check Changes') {
            steps {
                script {
                    def hasChanges = sh(script: 'git diff --quiet origin/main', returnStatus: true)
                    if (hasChanges == 0) {
                        echo "No changes since last build"
                        currentBuild.result = 'ABORTED'
                        return
                    }
                }
            }
        }
        stage('build') {
            steps {
                echo 'build inference'
            }
        }
        stage("test") {
            steps {
                echo "pipenv run pytest"
            }
        }

        stage("publish_inference") {
            steps {
                script {
                    // your existing script for the publish_inference stage
                }
            }
        }
        stage("publish_inference_metrics") {
            steps {
                script {
                    // your existing script for the publish_inference_metrics stage
                }
            }
        }
    }
}
