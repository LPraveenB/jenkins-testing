pipeline {
    agent any
    options {
        buildDiscarder logRotator(
            daysToKeepStr: '16',
            numToKeepStr: '10'
        )
    }
    stages {
        stage('build') {
            steps {
                echo 'build inference'
            }
        }
        stage("test") {
            steps {
                echo "pipenv run pytest"
            }
        }
        stage("publish_inference") {
            steps {
                script {
                    def config = readJSON file: "${WORKSPACE}/component/build.json"
                    def inferenceConfig = config.script_paths.inference_image
                    def region = inferenceConfig.region
                    def project = inferenceConfig.project
                    def repository = inferenceConfig.repository
                    def imageName = inferenceConfig.imageName
                    def pythonVersion = inferenceConfig.pythonVersion

                    // Changing the working directory to where the Dockerfile is located
                    dir("${WORKSPACE}/component/inference") {
                        sh "bash dockerfile.sh"
                        sh "DOCKER_BUILDKIT=0"
                        sh "docker build -t inference -f Dockerfile ."
                        withCredentials([file(credentialsId: "GCP-AUTH", variable: 'GCR_CRED')]) {
                            sh 'cat "${GCR_CRED}" | docker login -u _json_key_base64 --password-stdin https://us-west1-docker.pkg.dev'
                            sh "docker tag inference ${region}-docker.pkg.dev/${project}/${repository}/${imageName}:latest"
                            sh "docker push ${region}-docker.pkg.dev/${project}/${repository}/${imageName}:latest"
                        }
                        sh 'docker rmi ${region}-docker.pkg.dev/${project}/${repository}/${imageName}:latest'
                        echo 'Build docker image Finish'
                    }
                }
            }
        }
    }
}
